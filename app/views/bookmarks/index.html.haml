%table.table.table-hover
  %thead
    %tr
      %th Url
      %th Title
      %th Slug
      %th Visit Count
      %th

  %tbody
    - @bookmarks.each do |bookmark|
      %tr
        %td= link_to bookmark.url, bookmark.url
        %td= bookmark.title
        %td
          = text_field_tag "", visit_url(bookmark.slug), id: "bookmark-#{bookmark.id}"
          =button_tag do
            %i.fa.fa-clipboard
        %td= bookmark.visit_count
        %td
          = link_to 'Edit', edit_bookmark_path(bookmark)
          = link_to 'Destroy', bookmark, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Bookmark', new_bookmark_path
